{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"$lib": ["./frontend/src/lib/"],
			"$lib/*": ["./frontend/src/lib/*"],
			"@": ["./frontend/src/"],
			"@/*": ["./frontend/src/*"],
			"@root/*": ["./*"]
		}
	},
	"include": ["./vite.config.ts", "scripts/**/*.ts"]
}
